<UserControl x:Class="BudgetApp_WPF.MVVM.Views.Expense.AddEditExpenseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BudgetApp_WPF.MVVM.Views.Expense"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>




        <TextBlock Text="Expense"
                   Grid.ColumnSpan="2"
                   Grid.Column="1"
                   HorizontalAlignment="Center"/>





        <TextBlock Text="User"
                   Grid.Column="1"
                   Grid.Row="1"/>
        <ComboBox Grid.Column="2"
                 Grid.Row="1"/>
        
        
        


        <TextBlock Text="Expense Category"
                   Grid.Column="1"
                   Grid.Row="2"/>
        <Label Content="CATEGORY EXPENSE"
               Grid.Column="2"
               Grid.Row="2"/>


        <TextBlock Text="Expense Subcategory"
                   Grid.Column="1"
                   Grid.Row="3"/>
        <ComboBox Grid.Column="2"
                  Grid.Row="3"/>


        <TextBlock Text="Amount"
                   Grid.Column="1"
                   Grid.Row="4"/>
        <TextBox Grid.Column="2"
                 Grid.Row="4"/>

        <TextBlock Text="Time Stamp"
                   Grid.Column="1"
                   Grid.Row="5"/>
        <DatePicker Grid.Column="2"
                 Grid.Row="5"/>


        <TextBlock Text="Frequency"
                   Grid.Column="1"
                   Grid.Row="6"/>
        <ComboBox Grid.Column="2"
                 Grid.Row="6"/>


        <TextBlock Text="ReOccuring?"
                   Grid.Column="1"
                   Grid.Row="7"/>
        <StackPanel Grid.Column="2"
                    Grid.Row="7">
            <RadioButton Content="Yes" GroupName="IsReoccurring"/>
            <RadioButton Content="No" GroupName="IsReoccurring"/>
        </StackPanel>

        <TextBlock Text="Note"
                   Grid.Column="1"
                   Grid.Row="8"/>
        <TextBox Grid.Column="2"
                 Grid.Row="8"
                 TextWrapping="Wrap"/>
        
        
        
        
        
    </Grid>
</UserControl>

    