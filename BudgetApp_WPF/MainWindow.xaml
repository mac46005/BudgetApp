<Window x:Class="BudgetApp_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetApp_WPF"
        xmlns:enums="clr-namespace:BudgetApp_WPF.Core.Enums"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Height="900"
        Width="960">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <!--Top Border-->
            <Border Grid.ColumnSpan="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    MouseLeftButtonDown="Border_MouseLeftButtonDown">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <TextBlock Text="Budget App"/>
                    <TextBlock Text="DATETIME"
                               HorizontalAlignment="Center"/>
                    <StackPanel HorizontalAlignment="Right"
                                Orientation="Horizontal">
                        <Button Height="30"
                                Width="30"
                                Content="_"
                                Click="Button_ClickMinimize"/>
                        <Button Height="30"
                                Width="30"
                                Content="O"
                                Click="Button_ClickMaximize"/>
                        <Button Height="30"
                                Width="30"
                                Content="X"
                                Click="Button_ClickClose"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            
            
            
            
            <!--Side Nav-->
            <ContentControl Grid.Row="1" 
                            Content="{Binding Navigator}"/>
        </Grid>
    </Grid>
</Window>
